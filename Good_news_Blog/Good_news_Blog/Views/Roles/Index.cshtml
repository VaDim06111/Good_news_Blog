@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Список ролей";
}

<h2><span class="badge badge-secondary">Список ролей</span></h2>

<table class="table">
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>

<div class="form-inline">
    <a asp-action="Create" class="btn btn-primary m-2">Добавить роль</a>
    <a asp-action="UserList" class="btn btn-primary m-2">Список пользователей</a>
</div>



