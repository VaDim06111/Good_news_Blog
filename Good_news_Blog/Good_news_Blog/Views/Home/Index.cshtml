@model IEnumerable<Good_news_Blog.Data.News>

@{
    ViewData["Title"] = "Good news Blog";
}

<div class="card-columns" style="margin-left:0px;">

    @foreach (var news in Model)
    {        
        <div class="card col-md-12">
            <img src="~/images/fon.jpg" class="card-img-top" alt="image">
            <div class="card-body">
                <h4 class="card-title">@news.Title</h4>
                <p class="card-text">@news.Text.Substring(0, news.Text.Length < 145 ? news.Text.Length : 145) ...</p>
                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                <a asp-controller="Home" asp-action="ReadMore" asp-route-id="@news.Id" class="btn btn-primary">Read more</a>
            </div>
        </div>
    }

</div>